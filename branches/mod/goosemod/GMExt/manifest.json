{
    "name": "GooseMod for Web",
    "description": "A light, secure, and easy to use Discord mod; now in your browser.",

    "version": "1.2.0-desktop",

    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.discord.com/*"
    ],

    "manifest_version": 2
}